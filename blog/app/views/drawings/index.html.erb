<p id="notice"><%= notice %></p>

<h1>Drawings</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @drawings.each do |drawing| %>
     <%=image_tag("image_2.png", alt: "image 2")%>

      <tr>
        <td><%= drawing.name %></td>
        <td><%= link_to 'Show', drawing %></td>
        <td><%= link_to 'Edit', edit_drawing_path(drawing) %></td>
              
        <td><%= link_to 'Destroy', drawing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%=image_tag("image_1.png", alt: "image 1")%>
        

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Drawing', new_drawing_path %>
